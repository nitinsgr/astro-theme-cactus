---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Astro",
		desc: "Build fast websites, faster.",
		href: "https://astro.build",
	},
	{
		title: "Astro Assets",
		desc: "Built-in optimized asset support.",
		href: "https://docs.astro.build/en/guides/assets/",
	},
	{
		title: "Tailwind CSS",
		desc: "Rapidly build modern websites without ever leaving your HTML.",
		href: "https://tailwindcss.com",
	},
	{
		title: "Markdown",
		desc: "Simple and easy-to-use markup language.",
		href: "https://www.markdownguide.org/",
	},
	{
		title: "MDX",
		desc: "Markdown for the component era.",
		href: "https://mdxjs.com/",
	},
	{
		title: "Satori",
		desc: "Generating png Open Graph images for blog posts.",
		href: "https://github.com/vercel/satori",
	},
	{
		title: "Pagefind",
		desc: "A fully static search library.",
		href: "https://pagefind.app/",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section class="sm:flex sm:flex-col sm:items-center font-Aileron-Black font-semibold lg:flex-row lg:justify-between">
		<div class="lg:w-1/2 lg:mr-10">
			<h1 class="text-3xl lg:text-3xl lg:leading-9">
				Hi! <span style="color: blue;">Nitin</span> here<br>
				specialize in <span class="underline" style="color: green;">UX and Visual</span>
				to help brands & products solve problems that matter.
				Advocating responsible, sustainable, and human user-centric solutions.
			  </h1>
		  <!-- <SocialList /> -->
		</div>
		<div class="hidden lg:block sm:mt-5">
		  <img class="mx-auto rounded-lg" width="300px" height="300px" src="/Personal/image3.png"/>
		</div>
	  </section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-3xl font-SourceSerifPro-Black text-blue-500 font-Bold">Recent Work</h2>
		<hr>
		<ul class="container mt-6 m-auto grid lg:grid-cols-1 gap-4 sm:grid-cols-1">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	
</PageLayout>
